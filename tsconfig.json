{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022","DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true,
    "files": true
  },
  "include": ["src/**/*.ts", "environment.d.ts"]
}
